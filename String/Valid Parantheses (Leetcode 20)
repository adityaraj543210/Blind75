class Solution {
public:
    bool isValid(string s) {
        stack<char> st;
        int i=0;
        int n = s.size();
        while(i<n){
            if(s[i]=='(' || s[i]=='{' || s[i]=='['){
                st.push(s[i]);
                i++;
                continue;
            }
            else {
                if(st.size()==0) return false;
                char t = st.top();
                st.pop();
               
                if(t=='(' && s[i++]==')') continue;
                else if(t=='{' && s[i++]=='}') continue;
                else if(t=='[' && s[i++]==']') continue;
                else return false;
            }
        }
        if(st.size()) return false;
        return true;
        
    }
};
