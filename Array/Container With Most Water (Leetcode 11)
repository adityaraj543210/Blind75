class Solution {
public:
    int maxArea(vector<int>& height) {
        int n = height.size();
        int i=0,j=n-1;
        int ans = 0;
        while(i<=j){
            int water = (j-i)*min(height[i], height[j]);
            height[i]<=height[j] ? i++:j--;
            ans = max(ans, water);
        }
        return ans;
    }
};
